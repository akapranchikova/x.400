# Global -------------------------------------------------
NODE_ENV=development
RUST_LOG=info

# UI / Tauri ---------------------------------------------
TAURI_DEV_HOST=http://localhost:1420
VITE_INLINE_EXECUTION=true

# Core Service -------------------------------------------
CORE_IPC_HOST=127.0.0.1
CORE_IPC_PORT=3333
CORE_DB_PATH=./data/x400.sqlite
CORE_DB_ENCRYPTION_KEY=dev_only_key   # example for SQLCipher (dev)
CORE_TLS_ENABLE=false
CORE_TLS_CERT_PATH=./certs/dev.crt
CORE_TLS_KEY_PATH=./certs/dev.key

# SDK / Transport ----------------------------------------
X400_MODE=mock           # mock | sdk
X400_SDK_LIB_PATH=./vendor/sdk/libx400.so
X400_PROFILE=default
X400_USER=devuser
X400_PASSWORD=devpass

# Gateway / Directory ------------------------------------
SMTP_HOST=smtp.dev.local
SMTP_PORT=587
SMTP_TLS=true
IMAP_HOST=imap.dev.local
IMAP_PORT=993
IMAP_TLS=true
LDAP_URL=ldaps://ldap.dev.local
LDAP_BIND_DN=cn=app,ou=svc,dc=dev,dc=local
LDAP_BIND_PASSWORD=devpass
LDAP_BASE_DN=dc=dev,dc=local

# Telemetry / Support ------------------------------------
TELEMETRY_ENABLED=false
SUPPORT_UPLOAD_ENDPOINT=http://localhost:3333/support/upload
TRACE_BUNDLE_PATH=./traces

# CLI -----------------------------------------------------
CLI_DEFAULT_PROFILE=default
