{
  "name": "ui-client",
  "version": "0.1.0",
  "private": true,
  "description": "Tauri + React desktop UI for the X.400 modernization project",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "prepreview": "pnpm run build",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "playwright:install": "playwright install chromium firefox",
    "e2e": "node ./scripts/run-e2e.mjs",
    "e2e:playwright": "pnpm exec playwright test -c playwright.config.ts",
    "e2e:headed": "pnpm exec playwright test -c playwright.config.ts --headed",
    "e2e:offline": "pnpm exec vitest run --config vitest.e2e.config.ts",
    "tauri": "tauri dev"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.5.4",
    "@x400/sdk-wrapper": "workspace:*",
    "@x400/shared": "workspace:*",
    "clsx": "^2.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^1.5.9",
    "@axe-core/playwright": "^4.8.0",
    "@playwright/test": "^1.41.2",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@vitest/coverage-v8": "^1.2.2",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "jsdom": "^27.0.1",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitest": "^1.2.2"
  }
}
