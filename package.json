{
  "name": "x400-client-modernization",
  "version": "0.1.0",
  "private": true,
  "description": "Monorepo scaffold for the X.400 client modernization project",
  "license": "MIT",
  "engines": {
    "node": ">=18.18.0"
  },
  "packageManager": "pnpm@8.15.4",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build --filter=!@x400/docs",
    "test": "turbo run test --parallel --filter=!@x400/core-service",
    "test:ui": "pnpm --filter ui-client run test",
    "test:core": "pnpm --filter @x400/core-service run test",
    "test:cli": "pnpm --filter @x400/cli run test",
    "test:shared": "pnpm --filter @x400/shared run test",
    "test:sdk": "pnpm --filter @x400/sdk-wrapper run test",
    "test:all": "pnpm test && pnpm test:core",
    "e2e": "pnpm --filter ui-client run e2e",
    "e2e:headed": "pnpm --filter ui-client run e2e:headed",
    "coverage": "turbo run coverage --parallel",
    "lint": "turbo run lint --parallel",
    "fmt": "turbo run format --parallel",
    "format": "prettier --write .",
    "audit": "pnpm audit --prod && pnpm --filter @x400/core-service run audit",
    "docs": "turbo run docs",
    "docs:dev": "pnpm --filter @x400/docs run docs:dev",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,cjs,mjs,json,md,css,scss}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@playwright/test": "^1.41.2",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "@vitest/coverage-v8": "^1.2.2",
    "c8": "^9.1.0",
    "dotenv": "^16.4.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "turbo": "^1.11.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
