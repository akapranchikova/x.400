{
  "name": "x400-client-modernization",
  "version": "0.1.0",
  "private": true,
  "description": "Monorepo scaffold for the X.400 client modernization project",
  "license": "MIT",
  "engines": {
    "node": ">=18.18.0"
  },
  "packageManager": "pnpm@8.15.4",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build --filter=!@x400/docs",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write .",
    "docs": "turbo run docs",
    "docs:dev": "pnpm --filter @x400/docs run docs:dev",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,cjs,mjs,json,md,css,scss}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3"
  }
}
