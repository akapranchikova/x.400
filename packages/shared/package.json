{
  "name": "@x400/shared",
  "version": "0.1.0",
  "description": "Shared schemas, types, utilities, and logging for the X.400 modernization project",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs --clean --sourcemap --treeshake",
    "dev": "tsup src/index.ts --dts --format esm,cjs --watch",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "format": "prettier --write 'src/**/*.{ts,tsx}'"
  },
  "dependencies": {
    "pino": "^9.13.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^1.2.2",
    "vitest": "^1.2.2",
    "tsup": "^8.2.4",
    "typescript": "^5.3.3"
  }
}
